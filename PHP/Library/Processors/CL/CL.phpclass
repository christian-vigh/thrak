	//	Displays the command elapsed time.
	private function  __establish_timer ( )
	   {
	   	$display_elapsed = function ( $start )
	   	   {
			$end 		=  microtime ( true ) ;
			$elapsed 	=  $end - $start ;

			output ( "\n*** Elapsed time : " . Convert::ToTimeString ( $elapsed ) . " ***" ) ;
