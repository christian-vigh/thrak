	   	$defined_variables 	=  array_keys ( get_defined_vars ( ) ) ;
	   	$standard_variables 	=  array_keys ( $__THRAK_STDVARIABLES__ ) ;

	   	switch  ( $option )
	   	   {
			case	0 :
				$this -> __list ( 'Variables', array_merge ( $standard_variables, $defined_variables ) ) ;
				break ;

			case	1 :
