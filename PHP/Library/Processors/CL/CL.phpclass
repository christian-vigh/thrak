		   	'exit'		=>  true
		    ),
	    	// --thrakconfig :
	    	//	Display the path of the Thrak configuration file.
	    	array
	    	   (
	    	   	'names'		=>  '--thrakconfig',
	    	   	'help'		=>  'Displays the path of the Thrak configuration file',
	    	   	'callback'	=>  '__display_thrak_config',
	    	   	'exit'		=>  true
		    ),
  		// --thrakversion (or --thrakver) :
  		//	Displays the current Thrak library version.
  		array
  		   (
  		   	'names'		=>  array ( '--thrakversion', '--thrakver' ),
  		   	'help'		=>  'Displays the current Thrak library version',
  		   	'callback'	=>  '__display_thrak_version',
  		   	'exit'		=>  true
		    ),
    		// --thraksettings :
