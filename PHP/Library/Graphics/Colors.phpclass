	// __convert_cmy_to_cmyk -
	//	Converts a CMY value to RGB.
	private function  __convert_cmy_to_cmyk ( $cmy )
	   {
	   	$K 	=  1 ;
	   	$C 	=  $cmy [0] ;
	   	$M 	=  $cmy [1] ;
	   	$Y 	=  $cmy [2] ;

	   	if  ( $C  <  $K )
	   		$K = $C ;

   		if  ( $M  <  $K )
   			$K = $M ;

		if  ( $Y  <  $K )
			$K = $Y ;

		if  ( $K  ==  1 )
			$D = $K ;
		else
			$D = 1 - $K ;

		$C 	=  ( $C - $K ) / $D ;
		$M 	=  ( $M - $K ) / $D ;
		$Y 	=  ( $Y - $K ) / $D ;

		$result =  array ( round ( $C ), round ( $M ), round ( $Y ), round ( $K ) ) ;

		return ( $result ) ;
	    }


	// __convert_cmyk_to_rgb -
