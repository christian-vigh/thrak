	// __hue_to_rgb -
	//	Converts a hue to an RGB value.
	private function  __hue_to_rgb ( $v1, $v2, $vh )
	   {
	   	if  ( $vh  <  0 )
	   		$vh = $vh + 1 ;

   		if  ( $vh  >  1 )
   			$vh = $vh - 1 ;

		if  ( $vh * 6  <  1 )
			return ( $v1 + ( $v2 - $v1 ) * 6 * $vh ) ;

		if  ( $vh * 2  <  1 )
			return ( $v2 ) ;

		if  ( $vh * 3  <  2 )
			return ( $v1 + ( $v2 - $v1 ) * ( ( 2.0 / 3.0 ) - $vh ) * 6 ) ;

		return ( $v1 ) ;
	    }


