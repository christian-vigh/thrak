	private function  __convert_rgb_to_cmy ( $rgb )
	   {
   		$C 	=  1 - ( $rgb [0] / 255.0 ) ;
   		$M 	=  1 - ( $rgb [1] / 255.0 ) ;
   		$Y 	=  1 - ( $rgb [2] / 255.0 ) ;

   		$result =  array
   		   (
   		   	round ( $C * 100, 0 ),
