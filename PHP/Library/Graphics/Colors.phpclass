/*==================================================================================================

	Color schemes.

  ==================================================================================================*/
define ( 'COLOR_SCHEME_RGB'		, 0 ) ;
define ( 'COLOR_SCHEME_HSL'		, 1 ) ;
define ( 'COLOR_SCHEME_HSB'		, 2 ) ;
define ( 'COLOR_SCHEME_WEBSAFE'		, 3 ) ;
define ( 'COLOR_SCHEME_CMY'		, 4 ) ;
define ( 'COLOR_SCHEME_CMYK'		, 5 ) ;
define ( 'COLOR_SCHEME_GRAYSCALE'	, 6 ) ;

