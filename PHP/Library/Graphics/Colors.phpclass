	   	$M 	=  $cmyk [1] / 100.0 ;
	   	$Y 	=  $cmyk [2] / 100.0 ;
	   	$K 	=  $cmyk [3] / 100.0 ;

	   	$C 	=  ( ( $C * ( 1 - $K ) ) + $K ) ;
	   	$M 	=  ( ( $M * ( 1 - $K ) ) + $K ) ;
	   	$Y 	=  ( ( $Y * ( 1 - $K ) ) + $K ) ;

